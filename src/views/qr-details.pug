doctype html
html
    head
        title QR Details
        style.
            body {
                font-family: Arial, sans-serif;
                background-color: #f9f9f9;
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                margin: 0;
            }
            h1 {
                color: #333;
                text-align: center;
                margin-bottom: 20px;
            }
            .container {
                max-width: 500px;
                background-color: #ffffff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            p {
                font-size: 16px;
                color: #555;
                margin: 10px 0;
            }
            strong {
                color: #333;
                font-weight: bold;
            }
            a {
                display: inline-block;
                margin-top: 20px;
                padding: 10px 15px;
                background-color: #007bff;
                color: #ffffff;
                text-decoration: none;
                border-radius: 5px;
                text-align: center;
            }
            a:hover {
                background-color: #0056b3;
            }
    body
        .container
            h1 QR Details
            p
                strong Current user: #{username}
            p
                strong VATIN:
                | #{vatin}
            p
                strong First Name:
                | #{firstName}
            p
                strong Last Name:
                | #{lastName}
            p
                strong Created At:
                | #{createdAt}
            a(href='/') Back to Home
