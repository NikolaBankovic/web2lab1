doctype html
html
    head
        title Generate QR code
        style.
            body {
                font-family: Arial, sans-serif;
                background-color: #f8f9fa;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
            }
            .container {
                width: 400px;
                padding: 20px;
                background-color: #ffffff;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                text-align: center; /* Center-aligns content inside the container */
            }
            h1 {
                color: #333;
                text-align: center;
                margin-bottom: 20px;
            }
            .form-group {
                margin-bottom: 15px;
                text-align: left; /* Left-aligns label text for readability */
            }
            label {
                display: block;
                margin-bottom: 5px;
                color: #555;
                font-weight: bold;
            }
            .form-control {
                width: 100%; /* Full width of the container */
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
                box-sizing: border-box; /* Ensures padding doesn't exceed width */
            }
            .btn-primary {
                display: block;
                width: 100%;
                padding: 10px;
                background-color: #007bff;
                color: #ffffff;
                font-size: 16px;
                text-align: center;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                margin-top: 10px;
            }
            .btn-primary:hover {
                background-color: #0056b3;
            }
            a {
                width: auto;
                display: inline-block;
                margin-top: 20px;
                padding: 10px 15px;
                background-color: #007bff;
                color: #ffffff;
                text-decoration: none;
                border-radius: 5px;
            }
            a:hover {
                background-color: #0056b3;
            }
    body
        .container
            h1 Generate QR code
            form(action="/generate-qr", method="post")
                .form-group
                    label(for="vatin") VATIN
                    input#vatin.form-control(type="text" name="vatin" required)
                .form-group
                    label(for="firstName") First Name
                    input#firstName.form-control(type="text" name="firstName" required)
                .form-group
                    label(for="lastName") Last Name
                    input#lastName.form-control(type="text" name="lastName" required)
                button.btn.btn-primary(type="submit") Generate
                a(href='/') Back to Home
